@import "assets/styles/fontawesome.wxss";

view {
  color: #c2d4f8;
}

page {
  margin: 0;
  color: #c2d4f8;
  background-color: #1e1d32;
  padding: 60px 0;
  overflow-y: auto;
  overflow-x: hidden;
}

a {
  color: #3dd0d8;
  cursor: pointer;
}

table {
  border-collapse: collapse;
}

.header {
  position: fixed;
  padding-top: 5px;
  height: 60px;
  left: 0;
  top: 0;
  right: 0;
  background-color: rgb(41,40,69);
  line-height: 60px;
  z-index: 5;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
}

.header-full {
  padding-top: 36px;
}

.header-logo {
  position: fixed;
  height: 32px;
  left: 0;
  top: 10px;
  right: 0;
  line-height: 60px;
  z-index: 10;
  text-align: center;
  padding: 10px 0;
}

.header-logo.header-full {
  top: 35px;
}

.header-buttons {
  position: fixed;
  height: 32px;
  left: 0;
  top: 12px;
  right: 0;
  line-height: 60px;
  z-index: 15;
  padding: 14px 10px;
  line-height: 32px;
}

.header-buttons.full {
  top: 37px;
}

.header-logo image {
  display: inline-block;
  height: 32px;
  width: 90px;
}

.footer {
  position: fixed;
  height: 60px;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: rgb(41,40,69);
  z-index: 5;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
}

.footer-full {
  padding-bottom: 30px;
}

  .footer table {
      width: 100%;
      text-align: center;
  }

      .footer table i {
          font-size: 24px;
          margin-top: 7px;
          display: block;
      }

      .footer table div {
          font-size: 12px;
          margin-top: -2px;
      }

      .footer table td {
          opacity: 0.8;
      }

          .footer table td.active {
              opacity: 1;
              color: #3dd0d8;
          }

.left {
  float: left;
}

.right {
  float: right;
}

.search-dropdown-box {
  background-color: rgb(41,40,69);
  z-index: 5;
  box-shadow: rgba(0,0,0,0.2);
  height: 40px;
  left: 0;
  top: 65px;
  right: 0;
  position: fixed;
  border-top: 1px solid #1e1d32;
  padding: 5px 0;
}

.search-dropdown-box.full {
  top: 95px;
}

.act-dropdown-box {
  background-color: rgb(41,40,69);
  z-index: 5;
  box-shadow: rgba(0,0,0,0.2);
  height: 40px;
  left: 0;
  top: 60px;
  right: 0;
  position: fixed;
  border-top: 1px solid #1e1d32;
  height: 50px;
}

.ch-dropdown-box {
  background-color: rgb(41,40,69);
  z-index: 5;
  box-shadow: rgba(0,0,0,0.2);
  height: 100px;
  left: 0;
  top: 60px;
  right: 0;
  position: fixed;
  border-top: 1px solid #1e1d32;
  text-align: center;
  padding-top: 15px;
}

.textbox {
  background-color: #1e1d32;
  box-sizing: border-box;
  border-radius: 5px;
  outline: 0;
  border: 0;
  font-size: 14px;
  padding: 8px 10px;
  margin: 4px 10px;
  width: calc(100% - 20px);
  height: 32px;
  color: #c2d4f8;
}

.textbox::-webkit-input-placeholder {
  color: #e2ecffa0;
  line-height: 32px;
}

.guild-wrapper {
  padding: 55px 10px 0 10px;
}

.guild-wrapper.full {
  padding: 85px 10px 0 10px;
}

.ch-wrapper {
  padding: 15px 10px 0 10px;
}

.ch-detail-wrapper {
  padding: 135px 10px 0 10px;
}

.guild-item image {
  width: 40px;
  height: 40px;
  border-radius: 10px;
  display: inline-block;
  margin-right: 10px;
}

.guild-item table {
  width: 100%;
  border-collapse: collapse;
}

.guild-item table td {
  vertical-align: top;
  font-size: 18px;
  padding-top: 10px;
}

.guild-item {
  border-top: 0.6px solid rgb(41,40,69);
  border-bottom: 0.6px solid rgb(41,40,69);
  margin-bottom: -0.6px;
  padding: 5px 0;
}

.guild-item-hint {
  opacity: 0.6;
}

.text-center {
  text-align: center;
}

.subline {
  zoom: 0.8;
  opacity: 0.6;
}

.reg-title {
  margin-bottom: -14px;
}

.reg-subline {
  zoom: 0.9;
  display: inline-block;
}

.reg-subline.short-width {
  zoom: 0.8;
}

.first-line {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 100%;
  margin-bottom: 5px;
  font-size: 18px;
  font-weight: normal;
}

#layout {
  max-width: 100%;
}

.tab-item {
  padding: 6px 10px;
  background: rgba(0,0,0,0);
  border-radius: 50px;
  font-size: 16px;
}

.tab-outer {
  text-align: center;
  margin-top: 15px;
}

.tab-item:hover, .tab-item.active {
  background: #3dd0d8;
  color: #fff;
}

.form-table {
  width: 100%;
  background: rgb(41,40,69);
  font-size: 14px;
  border-radius: 10px;
  border-collapse: collapse;
}

  .form-table tr {
      border-bottom: 1px solid #1e1d32;
  }

  .form-table tr:last-child {
      border-bottom: none;
  }

.form-table td {
  line-height: 48px;
  padding: 0 15px;
}

.inline-textbox, .inline-textbox:focus {
  width: 100%!important;
  border: none;
  background: none;
  color: #fff;
  outline: 0;
  font-size: 16px;
}

.section-title {
  opacity: 0.7;
  font-size: 12px;
  margin-bottom: 5px;
}

.charactor-name {
  font-size: 24px;
  line-height: 48px;
}

.charactor-name image {
  width: 48px!important;
  height: 48px!important;
}

  .charactor-name span {
      vertical-align: top;
  }


.class-1 {
  color: #c79c6e !important;
}

.class-2 {

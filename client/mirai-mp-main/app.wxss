}

.orange {
  color: #ff8000;
}

.blue {
  color: #3b82de;
}

.green {
  color: #1eff00;
}

.gray {
  color: #666;
}

.white {
  color: #fff;
}

.wcl-table {
  width: 100%;
  font-size: 12px;
  background: rgb(41,40,69);
  border-collapse: collapse;
  border-radius: 10px;
  margin-bottom: 10px;
}

  .wcl-table tr {
      border-bottom: 0.7px solid #1e1d32;
  }

  .wcl-table tbody tr:last-child {
      border-bottom: none;
  }

  .wcl-table td {
      padding: 10px 6px;
      zoom: 0.9;
      font-weight: bold;
  }

  .wcl-table th {
      padding: 10px 6px;
      text-align: left;
      zoom: 0.9;
  }

  .wcl-table image {
      width: 24px;
      height: 24px;
      vertical-align: middle;
  }

  .wcl-table span {
      vertical-align: middle;
  }

.z-100 {
  z-index: 100;
}

.class-img {
  width: 24px;
  height: 24px;
  vertical-align: middle;
}

.raid-img {
  width: 32px;
  height: 32px;
  vertical-align: middle;
  border-radius: 8px;
  margin-right: 8px;
}

.reg-icon {
  color: #fff;
  font-weight: bold;
  opacity: 0.9;
}


.label-gray {
  background: #777;
  width: 100%;
  text-align: center;
  color: #fff;
  font-weight: bold;
  border-radius: 5px;
  display: inline-block;
}

.label-orange {
  background: orange;
  width: 100%;
  text-align: center;
  color: #fff;
  font-weight: bold;
  border-radius: 5px;
  display: inline-block;
}

.label-red {
  background: rgb(255, 95, 95);
  width: 100%;
  text-align: center;
  color: #fff;
  font-weight: bold;
  border-radius: 5px;
  display: inline-block;
}

.label-purple {
  background: rgb(154, 61, 199);
  width: 100%;
  text-align: center;
  color: #fff;
  font-weight: bold;
  border-radius: 5px;
  display: inline-block;
}

.label-green {
  background: rgb(24, 188, 60);
  width: 100%;
  text-align: center;
  color: #fff;
  font-weight: bold;
  border-radius: 5px;
  display: inline-block;
}

.reg-label span {
  line-height: 24px;
  padding: 0 4px;
}

.dialog {
  position: fixed;
  background-color: rgb(61,61,101);
  border-radius: 15px;
  left: 40px;
  right: 40px;
  box-shadow: 0 0 15px rgba(0,0,0,0.4);
  overflow: hidden;
  top: 50%;
}

.dialog-header {
  font-weight: bold;
}

.dialog-header, .dialog-body {
  border-bottom: 0.8px solid #1e1d32;
  padding: 15px;
}

.dialog-body, .dialog-footer {
  background: rgb(41,40,69);
}

.dialog-footer table {
  width: 100%;
  table-layout: fixed;
}

  .dialog-footer table td {
      text-align: center;
      padding: 15px;
      border-right: 0.8px solid #1e1d32;
  }

      .dialog-footer table td:last-child {
          border-right: none;
      }

      .dialog-footer table td a {
          display: block;
          width: 100%;
          height: 100%;
      }

.dialog-select-row {
  line-height: 46px;
  border-bottom: 0.8px solid #1e1d32;
}

  .dialog-select-row:last-child {
      border-bottom: none;
  }

.ratio {
  display: inline-block;
  width: 13px;
  height: 13px;
  padding: 1.5px;
  border: 1.7px solid #3dd0d8;
  vertical-align: middle;
  border-radius: 50%;
  margin-right: 7px;
}

  .ratio div {
      width: 100%;
      height: 100%;
      display: block;
      border-radius: 50%;
  }

  .ratio.selected div {
      background: #3dd0d8;
  }

.reg-subline .hint {
  color: #ccc;
}

.reg-table {
  margin-bottom: 30px;
}

.task-item {
  background: #292845;
  padding: 15px;
  border-radius: 8px;
  margin-bottom: 1px;
}

.task-item-new {
  padding: 15px;
  border-radius: 15px;
  margin-bottom: 1px;
}

.task-group {
  margin-bottom: 30px;
}

.task-title {
  font-weight: bold;
  color: #fff;
  margin-bottom: 10px;
}

.task-item span {
  vertical-align: middle;
}

.task-players {
  float: right;
}

.player-picker {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  width: 320px;
  background: #292845;
  z-index: 999;
  box-shadow: 0 0 15px #000;
}

.player-picker-title {
  color: #3dd0d8;
  padding: 15px;
  font-size: 18px;
  border-bottom: 1px solid rgba(124, 105, 227, 0.64);
}

.player-picker-list {
  height: calc(100% - 118px);
  overflow-y: auto;
}

.player-picker-footer {
  border-top: 1px solid rgba(124, 105, 227, 0.64);
  padding: 15px;
}

.player-picker-list-item {
  padding: 10px 15px;
  font-weight: bold;
  cursor: pointer;
}

  .player-picker-list-item:hover {
      background: rgba(255,255,255,0.1);
  }

.task-player {
  margin-left: 10px;
  font-weight: bold;
  cursor: pointer;
}

.clear {
  clear: both;
}

.delete-task {
  vertical-align: middle;
  color: #ff6e6e;
}

  .delete-task:hover {
      color: #ff9f9f;
  }

.task-item image {
  vertical-align: middle;
}

.ch-table {
  font-size: 16px;
}

.raid-icon {
  width: 50px!important;
  height: 50px!important;
  border-radius: 10px;
}

.raid-checked {
  font-size: 24px;
  line-height: 48px;
  color: greenyellow;
}

.main {
  padding-top: 5px;
  padding-bottom: 50px;
}

.main.full {
  padding-top: 35px;
  padding-bottom: 80px;
}

div {
  display: block;
}

.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 48px;
  background: rgb(41,40,69);
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  color: #c2d4f8;
}

.tab-bar-border {
  background-color: rgba(0, 0, 0, 0.33);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item cover-image {
  width: 27px;
  height: 27px;
}

.tab-bar-item cover-view {
  font-size: 10px;
}

.table {
  display: table;
  width: 100%;
  border-collapse: collapse;
  overflow-x: hidden;
}

.table-tr {
  display: table-row;
  width: 100%;
